                                <div class="client_profile_pic">
                                    <div class="client_profile_pic_1">
                                        <img src="@Url.Content("~/"+@item.JobSeekerProfile.ToString().Replace("..",""))" alt="" />
                                    </div>
                                    <i class="profile_pic_star"></i>
                                </div>
