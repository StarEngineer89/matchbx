@model MatchBX.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "ExternalLoginConfirmation";
}

<div class="col-md-12 login_smoll_box_textbg">
    <h2>Associate your @ViewBag.LoginProvider account.</h2>
    <p> </p>
</div>
<div class="login_smoll_container clearfix">

    <div class="col-md-12 login_small_box">
        @using (Html.BeginForm("ExternalLoginConfirmation", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group clearfix">
                <p class="text-info">
                    You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
                    Please enter a user name for this site below and click the Register button to finish
                    logging in.
                </p>
            </div>
            <div class="form-group clearfix">
                <label for="email" class="input_label_style">Email Address</label>
                @*<input type="email" class="form-control form_input" id="email">*@
                @Html.TextBoxFor(m => m.Email, new { @id = "email", @class = "form-control form_input" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error_span" })
            </div>
            <div class="form-group clearfix">
                @*<a href="#" class="btn btn-default register_small_button secondary_color_bg" title="Send reset email">Send reset email</a>*@
                <input type="submit" class="btn btn-default register_small_button secondary_color_bg" title="NEXT STEP" value="NEXT STEP" />
            </div>
            <div class="form-group clearfix">
                <span id="errorMsg" class="error_span"> </span>
            </div>
        }
    </div>

</div><!--login_smoll_container-->

