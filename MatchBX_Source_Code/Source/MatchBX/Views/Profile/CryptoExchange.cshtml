@model dynamic
@{
    ViewBag.Title = "CryptoExchange";
    //Layout = "~/Views/Shared/_LayoutProfile.cshtml";
    Layout = Layout;
}

<main id="content" class="middle">
    <figure class="mobile-hide text-center"><img src="http://placehold.it/190x50" alt="Placeholder" width="190" height="50"></figure>
    <article class="w820">
        <form action="./" method="post" class="form-b">
            <p>
                <label for="fba">Pay with</label>
                <select id="fba" name="fba">
                    <option value="./">ETH</option>
                    <option value="./">Position #1</option>
                    <option value="./">Position #2</option>
                    <option value="./">Position #3</option>
                    <option value="./">Position #4</option>
                    <option value="./">Position #5</option>
                </select>
                <label for="fbb" class="hidden">Amount</label>
                <input type="number" id="fbb" name="fbb" required>
            </p>
            <p><a href="./"><i class="icon-arrows"></i> <span class="hidden">Switch</span></a></p>
            <p>
                <label for="fbc">Receive</label>
                <select id="fbc" name="fbc">
                    <option value="./">ETH</option>
                    <option value="./">Position #1</option>
                    <option value="./">Position #2</option>
                    <option value="./">Position #3</option>
                    <option value="./">Position #4</option>
                    <option value="./">Position #5</option>
                </select>
                <label for="fbd" class="hidden">Amount</label>
                <input type="number" id="fbd" name="fbd" required>
            </p>
            <p class="submit"><button type="submit">Convert</button></p>
        </form>
        <table class="table-money">
            <tr>
                <th colspan="2">Name</th>
                <th>Balance <a href="./" class="small">Hide Zero</a></th>
                <th>Price</th>
                <th>24H Change</th>
            </tr>
            <tr>
                <td><img src="http://placehold.it/30" alt="Placeholder" width="30" height="30"></td>
                <td>ETH <span class="small">Ethereum</span></td>
                <td>100,000.4</td>
                <td>$0.0541</td>
                <td>+30.5%</td>
            </tr>
            <tr>
                <td><img src="http://placehold.it/30" alt="Placeholder" width="30" height="30"></td>
                <td>WBTC <span class="small">Wrap BTC</span></td>
                <td>100,000.4</td>
                <td>$0.0541</td>
                <td>+30.5%</td>
            </tr>
            <tr>
                <td><img src="http://placehold.it/30" alt="Placeholder" width="30" height="30"></td>
                <td>DAI <span class="small">Dai</span></td>
                <td>100,000.4</td>
                <td>$0.0541</td>
                <td>+30.5%</td>
            </tr>
        </table>
    </article>
</main>

