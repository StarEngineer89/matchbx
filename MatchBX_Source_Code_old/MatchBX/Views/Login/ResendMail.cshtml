@{
    ViewBag.Title = "Resend Mail";
    Layout = null;

}
<script>
    $(document).ready(function () {
        $("#btnSubmit").click(function () {

            $('#divMsg').removeClass("col-md-12 success_message_show_small");
            $('#msgIcon').removeClass("check_success_icon");
            $('#msg').html("");
            var id=@Html.Raw(Json.Encode(Convert.ToInt32(Session["TempUserId"])));
            $.ajax({
                type: 'POST',
                cache: false,
                url: '@Url.Action("ResendMail", "Login")',
                data: { "id": id},
                success: function (data) {
                    
                    if(data=="success")
                    {
                        $('#divMsg').addClass("col-md-12 success_message_show_small");
                        $('#msgIcon').addClass("check_success_icon");
                        $('#msg').html("Signing up email resent");
                        $('#divdisplaymsg').show();
                    }
                },
                error: function () {
                    console.log(jqXHR.status);
                    console.log(exception);
                }
            });
        });
    });
</script>

<span id="" class="col-md-12 popup_box_title clearfix">
    Thank you for signing up!


    <a href="#" onclick="closebox('resendemail_view_pop_id')" class="popup_close_bg" title="Close"></a>
</span>

    <div class="col-md-12 pop_container_bg">

            <div class="form-group clearfix">
                <p>
                    We have send an email with activation link to your email address. In order to
                    complete the sign up process, please click the activation link.
                </p>
                <p>
                    If you didn't receive the activation mail, click on the below link to resend it.
                </p>
            </div>
            <div class="form-group clearfix">
                <input type="button" class="btn btn-default register_small_button secondary_color_bg" title="RESEND EMAIL" value="Resend email" id="btnSubmit" />
            </div>
        <div class="form-group clearfix mg_bottom_0" id="divdisplaymsg" style="display:none;">
            <div id="divMsg">
                <i id="msgIcon"></i>
                <p id="msg"></p>
            </div>
        </div>
        
    </div>

